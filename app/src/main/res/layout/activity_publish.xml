<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f9f7"
    tools:context="com.example.usuario.job_code.Publish">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="513dp"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="71dp"
                    android:adjustViewBounds="false"
                    app:srcCompat="@mipmap/logo"
                    tools:layout_editor_absoluteX="198dp"
                    tools:layout_editor_absoluteY="16dp" />


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30px"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Empresa"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="43dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"></LinearLayout>

                <EditText
                    android:id="@+id/txtCompanyName"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30px"
                    android:ems="10"
                    android:hint="Escriba el nombre de la empresa"
                    android:inputType="textPersonName"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="117dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="30px"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Tipo de publicación"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="185dp" />

                <RadioGroup
                    android:id="@+id/option"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:layout_weight="0.24">


                    <RadioButton
                        android:id="@+id/internship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pasantía"
                        tools:layout_editor_absoluteX="94dp"
                        tools:layout_editor_absoluteY="349dp" />

                    <RadioButton
                        android:id="@+id/service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Servicio estudiantil"
                        tools:layout_editor_absoluteX="94dp"
                        tools:layout_editor_absoluteY="257dp" />

                    <RadioButton
                        android:id="@+id/project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proyecto"
                        tools:layout_editor_absoluteX="94dp"
                        tools:layout_editor_absoluteY="302dp" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.47"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btNext"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_margin="30px"
                        android:background="?attr/colorPrimary"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Siguiente"
                        android:textAllCaps="false"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="356dp" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
