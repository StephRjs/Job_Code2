<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.usuario.job_code.internship">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15px"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            app:srcCompat="@mipmap/logo"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="3dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:fontFamily="sans-serif-condensed"
                android:text="Descripción"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_txDescription"
                android:layout_width="373dp"
                android:layout_height="84dp"
                android:ems="10"
                android:hint="Escriba una breve descripción de la pasantía, especifique los conocimientos requeridos."
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:fontFamily="sans-serif-condensed"
                android:text="Posición"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_txPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:ems="10"
                android:hint="Indique el puesto de trabajo "
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:fontFamily="sans-serif-condensed"
                android:text="Fecha de inicio"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_txDueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:ems="10"
                android:hint="yyyy/mm/dd"
                android:inputType="date" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:fontFamily="sans-serif-condensed"
                android:text="Contacto"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_txEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:ems="10"
                android:hint="Dirección de correo electrónico"
                android:inputType="textEmailAddress" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <Button
                    android:id="@+id/btPost"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="343dp"
                    android:layout_height="62dp"
                    android:layout_margin="30px"
                    android:background="@color/colorPrimary"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Publicar"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="356dp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>





